(ns outpace.reporting-service.db.bundle-report
  (:refer-clojure :exclude [find])
  (:require [outpace.reporting-service.db :as db]
            [schema.core :as s]))

(def schema
  {:id s/Str
   :bundle-profile-id s/Str
   :report-id s/Str
   :sort-order s/Int})

(defn insert [data-source]
  (first (db/insert! :data-sources schema data-source)))

(def create insert)

(defn find-by-id [id]
  (db/find-by-id :data-sources schema id))

(defn delete-by-id [id]
  (db/delete-by-id :data-sources schema id))
