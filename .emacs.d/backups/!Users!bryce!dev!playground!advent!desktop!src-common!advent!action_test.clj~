(ns advent.action-test)

(defn walk-to [who where]

  )

(let [script (do-actions (walk-to :ego [100 100])
                         (if (get-in entities [:ego :inventory :gold])
                           (do-actions (talk :ego "I would like to buy something")
                                       (remove-inventory :ego :gold))
                           (talk :ego "Sorry I don't have enough money")))]

  (doseq [step script]
    (eval-step step)))
